
<h1>New Tenant</h1>

<br>

<form action='/tenants', method='post'>
  <label>Name: </label>
  <input type='text', name='name'>

  <br>

  <label>Apartment: </label>
  <select name='apartment_id'>
    <% @apartments.each do |a| %>
      <option value=<%= a.id%>><%= a.address %></option>
    <% end %>
  </select> 

  <input type='submit'>  

</form>  
